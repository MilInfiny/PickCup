<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp">

<FrameLayout
    android:id="@+id/Framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relativeLayout"
        android:adjustViewBounds="true"
        android:src="@drawable/cofeecup" />

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#88ffffff">
        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urban Cafe"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textAllCaps="true"
            android:layout_marginStart="17dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id ="@+id/status_button"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:text="Round Button"
            android:background="@drawable/button_bg_round_green"
            android:padding="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_alignTop="@+id/tittle"
            android:layout_toEndOf="@+id/tittle" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/rating"
            android:visibility="gone"
            android:id="@+id/rating1"
            android:layout_toLeftOf="@+id/rating2"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/rating"
            android:visibility="gone"
            android:id="@+id/rating2"
            android:layout_toLeftOf="@+id/rating3"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/rating"
            android:visibility="gone"

            android:id="@+id/rating3"
            android:layout_toLeftOf="@+id/rating4"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/rating"
            android:visibility="gone"

            android:id="@+id/rating4"
            android:layout_toLeftOf="@+id/rating5"

            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/rating"
            android:id="@+id/rating5"
            android:visibility="gone"
            android:layout_marginEnd="17dp"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
</FrameLayout>





    </android.support.v7.widget.CardView>
</RelativeLayout>