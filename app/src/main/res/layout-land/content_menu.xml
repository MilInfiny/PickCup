<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="20dp"

    tools:context="com.example.infiny.pickup.Activity.MenuActivity"
    tools:showIn="@layout/activity_menu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo1"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_selector"
                    >
                    <ImageView
                        android:id="@+id/tittleimage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cofeecup"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        />

                    <RelativeLayout
                        android:id="@+id/toplayout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#88ffffff">

                        <TextView
                            android:id="@+id/tittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urban Cafe"
                            android:textColor="#000"
                            android:textSize="18dp"
                            android:textAllCaps="true"
                            android:layout_marginStart="17dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true" />
                        <Button
                            android:id ="@+id/status_button"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="Round Button"
                            android:background="@drawable/button_bg_round_green"
                            android:padding="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_alignTop="@+id/tittle"
                            android:layout_toEndOf="@+id/tittle" />
                        <ImageView
                            android:id="@+id/rating1"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:src="@drawable/rating"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/rating2" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:src="@drawable/rating"
                            android:id="@+id/rating2"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/rating3" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:src="@drawable/rating"
                            android:id="@+id/rating3"
                            android:layout_marginEnd="17dp"
                            android:layout_alignBottom="@+id/rating2"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <ScrollView
                        android:id="@+id/scrollview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/toplayout"
                        android:scrollbars="none"
                        android:background="@color/white"
                        android:nestedScrollingEnabled="false"
                        >
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycleView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
                    </ScrollView>
                    <ProgressBar
                        android:id="@+id/progressBar_cyclic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:visibility="gone"
                        android:indeterminateTint="@color/colorPrimary"
                        android:indeterminate="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/colorPrimaryopacity"
        >
        <TextView
            android:id="@+id/bt_order"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Order"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Â£ 2.20"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20dp"/>
    </RelativeLayout>
</RelativeLayout>
