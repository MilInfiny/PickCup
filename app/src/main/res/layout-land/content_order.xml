<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="20dp"

    tools:context="com.example.infiny.pickup.Activity.OrderActivity"
    tools:showIn="@layout/activity_order">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

          >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo1"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logo"
                android:layout_marginTop="20dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tittleimage"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:scaleType="centerCrop"
                       android:background="@drawable/button_selector3"
                        android:src="@drawable/cofeecup" />


                    <RelativeLayout
                        android:id="@+id/toplayout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#88ffffff">

                        <TextView
                            android:id="@+id/tittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="17dp"
                            android:text="Urban Cafe"
                            android:textAllCaps="true"
                            android:textColor="#000"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/status_button"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignTop="@+id/tittle"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_toEndOf="@+id/tittle"
                            android:background="@drawable/button_bg_round_green"
                            android:padding="15dp"
                            android:text="Round Button" />

                        <ImageView
                            android:id="@+id/rating1"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/rating2"
                            android:src="@drawable/rating" />

                        <ImageView
                            android:id="@+id/rating2"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/rating3"
                            android:src="@drawable/rating" />

                        <ImageView
                            android:id="@+id/rating3"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignBottom="@+id/rating2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            android:src="@drawable/rating" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/toplayout">

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_selector2">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/orderrecycleview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </android.support.v7.widget.RecyclerView>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_view1"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"


                            >

                            <RelativeLayout
                                android:id="@+id/rel_time"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:background="@drawable/button_selector2">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/timerecycleview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"                                android:layout_below="@+id/card_view1"
                                    >

                                </android.support.v7.widget.RecyclerView>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/card_pay"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/card_view"
                         >

                            <RelativeLayout
                                android:id="@+id/paylayout"
                                android:layout_width="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="12dp"
                                android:paddingLeft="18dp"
                                android:paddingRight="15dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_selector2">

                                <TextView
                                    android:id="@+id/tw_order"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="Pay"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="17dp"
                                    android:gravity="center"/>

                                <ImageView
                                    android:id="@+id/list_item_genre_arrow"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/right_arrow" />


                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>