<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.infiny.pickup.Activity.MenuActivity"
    tools:showIn="@layout/activity_menu">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/blackcup"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logo"
                android:layout_marginTop="20dp"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

               >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_selector"
                    >
                <ImageView
                    android:id="@+id/tittleimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cofeecup"
                    android:adjustViewBounds="true"
                    />
                <RelativeLayout
                    android:id="@+id/toplayout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#88ffffff">
                    <TextView
                        android:id="@+id/tittle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Urban Cafe"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textAllCaps="true"
                        android:layout_marginStart="17dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                    <Button
                        android:id ="@+id/status_button"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:text="Round Button"
                        android:background="@drawable/button_bg_round_green"
                        android:padding="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_alignTop="@+id/tittle"
                        android:layout_toEndOf="@+id/tittle" />
                    <ImageView
                        android:id="@+id/rating1"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rating"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/rating2" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rating"
                        android:id="@+id/rating2"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/rating3" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rating"
                        android:id="@+id/rating3"
                        android:layout_marginEnd="17dp"
                        android:layout_alignBottom="@+id/rating2"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toplayout"
                android:scrollbars="none"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff">
                <RelativeLayout
                    android:id="@+id/drinklayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/scrollview"
                    >
                    <TextView
                        android:id="@+id/tw_tittledrinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:textAllCaps="true"
                        android:textSize="18dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerHorizontal="true"/>
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tw_tittledrinks"
                        android:background="@color/lightgray"
                        ></View>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/drinksmenuview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:scrollbars="none"
                        ></android.support.v7.widget.RecyclerView>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/dessertlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/drinklayout">
                    <TextView
                        android:id="@+id/tw_tittledessert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dessert"
                        android:textAllCaps="true"
                        android:textSize="18dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerHorizontal="true"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tw_tittledessert"
                        android:background="@color/lightgray"
                        ></View>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/dessertsmenuview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:scrollbars="none"
                        ></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sandwitchlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/dessertlayout">
                    <TextView
                        android:id="@+id/tw_tittlesandwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sandwich"
                        android:textSize="18dp"
                        android:layout_marginBottom="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerHorizontal="true"/>
                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tw_tittlesandwitch"
                        android:background="@color/lightgray"
                        ></View>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/sandwitchesmenuview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view3"
                        android:scrollbars="none"
                        ></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                </RelativeLayout>
            </ScrollView>

                   </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:background="@color/colorPrimaryopacity"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Order"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Â£ 2.20"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20dp"/>
        </RelativeLayout>
</RelativeLayout>
