<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:id="@+id/rel_detailCard"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_CustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Paul Richarad"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_TotalCostOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="1555"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_CustomerPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_CustomerName"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="Contact#: 55545458744"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_OrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_CustomerPhoneNumber"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:text="Order#: #155545458744"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_TimeOfOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_OrderNumber"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="16dp"
                    android:textSize="14sp"
                    android:paddingRight="16dp"
                    android:text="6.45pm" />

                <TextView
                    android:id="@+id/tv_VerifyBtn"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_OrderNumber"
                    android:background="?attr/selectableItemBackground"

                    android:clickable="true"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="Verify"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_blue_dark" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel_detailCard"
                android:background="@color/lightgray" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>