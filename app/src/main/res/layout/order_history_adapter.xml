<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:id="@+id/tittleimage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/cofeecup"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#88ffffff">
            <TextView
                android:id="@+id/tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urban Cafe"
                android:textColor="#000"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toplayout">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <TextView
                android:id="@+id/orderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order#: "
                android:textColor="@color/colorPrimary"

                android:textSize="17dp"/>
            <TextView
                android:id="@+id/tw_orderno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/orderno"
                android:textColor="@color/colorPrimary"

                android:text="1230"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/tw_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â£ 27"
                android:textSize="17dp"
                android:textColor="@color/colorPrimary"

                android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tw_otp"
                    android:layout_below="@+id/tw_total"
                    android:layout_alignParentRight="true"
                    android:text="OTP: 2547"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Type: Sit In"
                    android:textColor="@color/colorPrimary"
                      android:id="@+id/type"
                    android:textAllCaps="false"
                    android:textSize="17dp"
                    android:layout_below="@+id/orderno"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feb 22,2017"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/type"

                    android:textAllCaps="false"
                    android:textSize="17dp"
                    android:id="@+id/tw_date"/>
        </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>

