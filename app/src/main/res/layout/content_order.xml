<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.infiny.pickup.Activity.OrderActivity"
    tools:showIn="@layout/activity_order">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/blackcup" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_selector">

                    <ImageView
                        android:id="@+id/tittleimage"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"

                        android:src="@drawable/cofeecup" />

                    <RelativeLayout
                        android:id="@+id/toplayout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#88ffffff">

                        <TextView
                            android:id="@+id/tittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="17dp"
                            android:text="Urban Cafe"
                            android:textAllCaps="true"
                            android:textColor="#000"
                            android:textSize="18dp" />

                        <Button
                            android:id="@+id/status_button"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignTop="@+id/tittle"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_toEndOf="@+id/tittle"
                            android:background="@drawable/button_bg_round_green"
                            android:padding="15dp"
                            android:text="Round Button" />

                        <ImageView
                            android:id="@+id/rating1"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/rating2"
                            android:src="@drawable/rating" />

                        <ImageView
                            android:id="@+id/rating2"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/rating3"
                            android:src="@drawable/rating" />

                        <ImageView
                            android:id="@+id/rating3"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:layout_alignBottom="@+id/rating2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="17dp"
                            android:src="@drawable/rating" />
                    </RelativeLayout>


                    <ScrollView
                        android:id="@+id/scrollview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/toplayout"
                        android:scrollbars="none">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/orderrecycleview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shadow_except_top">

                                </android.support.v7.widget.RecyclerView>



                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/timerecycleview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/orderrecycleview"
                                    android:background="@drawable/shadow_all_side">

                                </android.support.v7.widget.RecyclerView>



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/timerecycleview"
                                android:paddingLeft="15dp"
                                android:background="@drawable/shadow_all_side"
                                android:paddingRight="15dp">

                                <RelativeLayout
                                    android:id="@+id/paylayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="10dp">

                                    <TextView
                                        android:id="@+id/tw_order"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="Pay"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="17dp" />

                                    <ImageView
                                        android:id="@+id/list_item_genre_arrow"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/right_arrow" />


                                </RelativeLayout>
                            </RelativeLayout>
                        </RelativeLayout>

                    </ScrollView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
